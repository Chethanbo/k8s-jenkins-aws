Add-Type -AssemblyName System.Windows.Forms

# Test 1: simple single-arg (string) — should show a box
[System.Windows.Forms.MessageBox]::Show("Test 1 - simple ok") | Out-Null
Write-Host "Test1 OK"

# Test 2: enum overload — must use enums, not strings
[System.Windows.Forms.MessageBox]::Show(
    "Test 2 - enum ok",
    "Title",
    [System.Windows.Forms.MessageBoxButtons]::OK,
    [System.Windows.Forms.MessageBoxIcon]::Information
) | Out-Null
Write-Host "Test2 OK"
